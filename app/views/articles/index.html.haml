%h1 Articles#index
= will_paginate
%table
  %tr

  - @articles.each do |article|
    %tr
      %td
        %img.img-fluid{alt: article.title, src: article.main_image}
      %td= article.title
      %td= article.body
      %td= link_to 'Show', article_path(article)
      %td= link_to 'Edit', edit_article_path(article)
      %td= social_share_button_tag(article.title, :allow_sites => %w(twitter))
      %td= social_share_button_tag(article.title, :allow_sites => %w(facebook), :url => article_url(article), desc: article.title)
= will_paginate
